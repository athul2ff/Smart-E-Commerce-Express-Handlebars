                    <input type="text" name="couponCode" id=""><br><br>
                    <label for="" style="color: #0562afb4;">
                        <h5> coupon Amount</h5>
                    </label><br>
                    <input type="number" name="amount" id=""><br><br>
                    <label for="" style="color: #0562afb4;">
                        <h5> Enter quantity</h5>
                    </label><br>
                    <input type="number" name="quantity" id=""><br><br>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" onclick="a()" class="btn btn-success">Save changes</button>
                </form>
            </div>
        </div>
    </div>
