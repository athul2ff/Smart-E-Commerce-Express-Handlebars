<div class="container"> <br> <br>
      <h2 style="text-align: center;">porducts</h2>
    <div class="row"  style="margin-top: 30px;">
       {{#each products}}

            <div class="col-md-3 product-men" style="margin-bottom: 30px;">
                          
							<div class="men-pro-item simpleCart_shelfItem">
								<div class="men-thumb-item">
									<img src="/images/admin/img/product-images/{{this.products._id}}_1.jpg" alt="" class="pro-image-front">
									<img src="/images/admin/img/product-images/{{this.products._id}}_1.jpg" alt="" class="pro-image-back">
										<div class="men-cart-pro">
											
										</div>
									
										
								</div>
								<div class="item-info-product ">
									<h4><a href="single.html">{{this.products.title}}</a></h4>
									<div class="info-product-price">
										<span class="item_price">Price :{{this.products.offer}}</span>
										
									</div>
                                    <span>quantity :{{this.quantity}}</span>
                                    <span>Size :{{this.products.size}}</span>
									{{!-- <a href="/addtocart/{{this._id}}" class="item_add single-item hvr-outline-out button2">Add to cart</a>		 --}}
						    	<a  class="item_add single-item hvr-outline-out button2 " onclick="addToCart('{{this._id}}')" >Add to cart</a>
								</div>
							</div>
                         
						</div>
        {{/each}}
    </div>
</div>