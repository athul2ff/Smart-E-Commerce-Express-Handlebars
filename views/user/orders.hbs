<div class="container">
<div class="row" style="padding-top: 22px;">
 <div style="padding:4px;color: blanchedalmond; text-align: center;  background-color: rgba(4, 4, 4, 0.985); margin-right: 5px; border-radius: 3%;"><h4> Current Orders</h4></div>
 <a href="/delivered-orders"><div style="padding: 4px; color: blanchedalmond;text-align: center; background-color: rgba(0, 0, 0, 0.452); margin-right: 5px;  border-radius: 3%;"><h4>Deliverd Orders</h4></div></a> 
</div></div>
          <div class="container"  style="overflow-x:auto; margin-top: 20px;">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead class=" text-primary">  
                  <th>No</th>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Address</th>
                  <th>Amount</th>
                   <th>Payment</th>
                  <th>Order Status</th>
                 
                  <th></th>
                  <th></th>
                 
                </thead>
                <tbody >
                  {{#each order}}
                  <tr>
                    <a href="/invoice"></a>
                    <td>{{add @index}}</td>
                   
                    <td>{{date this.delivaryDetails.date}}</td>
                    <td>{{time this.delivaryDetails.date}}</td> 
                    <td>{{this.delivaryDetails.name}} <br>
                        {{this.delivaryDetails.email}} <br>
                        {{this.delivaryDetails.mobile}},{{this.delivaryDetails.mobile2}} <br>
                        {{this.delivaryDetails.state}},{{this.delivaryDetails.country}} <br>
                        {{this.delivaryDetails.city}},{{this.delivaryDetails.pincode}} <br>
                        {{this.delivaryDetails.landmark}}  <br>
                        {{this.delivaryDetails.address}}
                        
                    </td>
                    <td style="color: rgb(0, 128, 122); font-size: large;"> â‚¹{{this.grandTotal}}</td>
                    <td style="color: rgb(0, 128, 122); font-size: large;">{{this.paymentMethod}}</td>
                    <td style="color: green; font-size: large;" >{{this.statusupdate}}</td>
                    <td><a href="/view-order-details/{{this._id}}" class="btn btn-warning" >View Products</a></td>
                     <td><a onclick="cancelOrder('{{this._id}}')" id="{{this._id}}" class="btn btn-danger" {{cancelOrder this.statusupdate}}>{{cancelStatus this.statusupdate}}</a></td>
                     {{!-- <td><a onclick="cancelOr('{{this._id}}')" style="display: none;" id="cancelled" class="btn btn-danger" {{cancelOrder this.statusupdate}}>SASI KUTTAN</a></td> --}}
                  </tr>
                  {{!-- href="/cancel-order/{{this._id}}" --}}
                  {{/each}}
     
              
               </tbody>
              </table> 
            </div>
          </div>
          </div>
      
      <script>
        function cancelOrder(orderId){
          
         $.ajax({
           method:'post',
           url:'/cancel-order',
           data:{
             orderId:orderId
           },
           success:(response)=>{
             document.getElementById(`${orderId}`).setAttribute = "disable"
             document.getElementById(`${orderId}`).innerHTML = "Cancelled"
             
           }
         })

        }
      </script>
      